{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationDir": "dist",
    "esModuleInterop": true,
    "jsx": "react",
    "lib": ["es6", "dom", "es2016", "es2017"],
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "sourceMap": true,
    "target": "es5",
    "baseUrl": ".",
    "paths": {
      "components/*": [
        "components/*"
      ],
      "demo/*": [
        "styles/demo/*"
      ],
      "prensa": [
        "index.ts"
      ],
      "styles/*": [
        "styles/*"
      ],
      "storybook/*": [
        "storybook/*"
      ],
      "@prensa_tokens": [
        "prensa_tokens.d.ts"
      ]
    }
  },
  "include": [
    "components/**/*",
    "icons/**/*",
    "styled-system/**/*",
    "styles/**/*",
    "icons.ts",
    "index.ts",
    "styled-system.ts",
    "types.ts",
    "utils.ts"
  ],
  "exclude": [
    "node_modules",
    ".storyboook",
    ".github"
  ]
}
