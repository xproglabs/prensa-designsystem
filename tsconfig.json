{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationDir": "components",
    "esModuleInterop": true,
    "jsx": "react",
    "lib": ["es6", "dom", "es2016", "es2017"],
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "sourceMap": true,
    "target": "es5",
    "baseUrl": ".",
    "paths": {
      "components/*": [
        "src/components/*"
      ],
      "demo/*": [
        "src/styles/demo/*"
      ],
      "styles/*": [
        "src/styles/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    ".storyboook",
    ".github",
    "dist"
  ]
}
