{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationDir": "dist",
    "esModuleInterop": true,
    "jsx": "react",
    "lib": [
      "es6",
      "dom",
      "es2016",
      "es2017"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "sourceMap": true,
    "target": "es5",
    "baseUrl": ".",
    "paths": {
      "@prensa_tokens": [
        "prensa_tokens.d.ts"
      ]
    }
  },
  "include": [
    "components/Block/index.ts",
    "components/Typography/index.ts",
    "styles/teasers/index.ts",
    "styles/templates/index.ts",
    "styles/theme/index.ts"
  ]
}