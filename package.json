{
  "name": "@xprog/prensa",
  "version": "2.0.1",
  "description": "React components library in blocks",
  "author": "XPROG",
  "license": "ISC",
  "repository": "https://github.com/xproglabs/prensa-designsystem.git",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "scripts": {
    "storybook": "start-storybook -p 9009 -s public",
    "build-storybook": "build-storybook -o ./storybookbuild",
    "build": "npm run clear:dist && rollup --config",
    "build:map": "ANALYZE=true rollup --config",
    "build:declarations": "tsc index.ts --declaration --emitDeclarationOnly --declarationDir dist --jsx react --esModuleInterop",
    "hotreload": "rollup --config --watch",
    "eslint": "eslint -c .eslintrc.json --ext js,ts,tsx ./",
    "eslint:fix": "eslint -c .eslintrc.json --fix --ext js,ts,tsx ./",
    "run-prod": "npx http-server /var/www/prensa-designsystem/storybookbuild",
    "test": "jest",
    "clear:dist": "rm -rf dist",
    "prerelease:copyfiles": "cp -rf README.md dist && cp -rf CHANGELOG.md dist && cp -rf package.json dist && cp -rf .npmignore dist",
    "postrelease:copyfiles": "cp -rf dist/package.json . && cp -rf dist/CHANGELOG.md .",
    "release:local": "npm run prerelease:copyfiles && cd dist && npm pack",
    "release:qa": "npm run clear:dist && npm run eslint && npm run build && npm version patch && git push && git push --tags && npm run prerelease:copyfiles && cd dist && npm publish --tag qa",
    "release:prod": "npm run clear:dist && npm run eslint && npm run build && npm version patch && git push && git push --tags && npm run prerelease:copyfiles && cd dist && npm publish",
    "cd": "npm run build && npm run prerelease:copyfiles",
    "semantic-release": "cd dist && semantic-release"
  },
  "dependencies": {
    "@stitches/react": "1.2.8",
    "@xprog/prensa-css-engine": "1.0.39",
    "lodash": "4.17.19",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@babel/preset-react": "7.14.5",
    "@mdx-js/react": "2.1.2",
    "@rollup/plugin-json": "^4.1.0",
    "@semantic-release/changelog": "6.0.1",
    "@semantic-release/git": "10.0.1",
    "@semantic-release/npm": "9.0.0",
    "@storybook/addon-docs": "6.5.9",
    "@storybook/addon-essentials": "6.5.9",
    "@storybook/addons": "6.5.9",
    "@storybook/react": "6.5.9",
    "@types/lodash": "4.14.172",
    "@types/react": "17.0.16",
    "axios": "0.25.0",
    "babel-eslint": "10.1.0",
    "core-js": "3.6.5",
    "eslint": "6.8.0",
    "eslint-plugin-import-helpers": "1.1.0",
    "eslint-plugin-jest": "24.3.5",
    "eslint-plugin-react": "7.20.3",
    "git-last-commit": "1.0.1",
    "jest": "26.6.3",
    "prensa-docs": "0.0.6",
    "prop-types": "15.7.2",
    "rollup": "2.77.0",
    "rollup-plugin-dts": "4.2.2",
    "rollup-plugin-esbuild": "4.9.1",
    "rollup-plugin-ts": "3.0.2",
    "semantic-release": "19.0.3",
    "semantic-release-slack-bot": "3.5.3",
    "slackify-markdown": "4.3.1",
    "typescript": "4.7.4"
  }
}
