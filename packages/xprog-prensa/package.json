{
  "name": "@xprog/prensa",
  "version": "2.0.0",
  "description": "React components library in blocks",
  "author": "XPROG",
  "license": "ISC",
  "repository": "https://github.com/xproglabs/prensa-designsystem.git",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "scripts": {
    "storybook": "start-storybook -p 9009 -s public",
    "build-storybook": "build-storybook -o ./storybookbuild",
    "build": "npm run clear:dist && npm run build:js && npm run build:ts",
    "build:js": "rollup --config",
    "build:ts": "tsc index.ts --declaration --emitDeclarationOnly --declarationDir dist --jsx react --esModuleInterop --resolveJsonModule",
    "build:tgz": "npm run prerelease:copyfiles && cd dist && npm pack",
    "eslint": "eslint -c .eslintrc.json --ext js,ts,tsx ./",
    "eslint:fix": "eslint -c .eslintrc.json --fix --ext js,ts,tsx ./",
    "test": "jest",
    "clear:dist": "rm -rf dist",
    "prerelease:copyfiles": "cp -rf README.md dist && cp -rf CHANGELOG.md dist && cp -rf package.json dist && cp -rf .npmignore dist",
    "postrelease:copyfiles": "cp -rf dist/package.json . && cp -rf dist/CHANGELOG.md .",
    "release:local": "npm run prerelease:copyfiles && semantic-release --extends ./release.config.js --no-ci",
    "release": "npm run prerelease:copyfiles && semantic-release --extends ./release.config.js"
  },
  "dependencies": {
    "@stitches/react": "1.2.8",
    "@xprog/prensa-css-engine": "1.0.39",
    "lodash": "4.17.19",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@babel/preset-react": "7.14.5",
    "@mdx-js/react": "2.1.2",
    "@rollup/plugin-json": "^4.1.0",
    "@semantic-release/changelog": "6.0.1",
    "@semantic-release/git": "10.0.1",
    "@semantic-release/npm": "9.0.0",
    "@storybook/addon-docs": "6.5.9",
    "@storybook/addon-essentials": "6.5.9",
    "@storybook/addons": "6.5.9",
    "@storybook/react": "6.5.9",
    "@types/lodash": "4.14.172",
    "@types/react": "^18.0.15",
    "@types/react-dom": "^18.0.6",
    "babel-eslint": "10.1.0",
    "core-js": "3.6.5",
    "esbuild": "^0.14.53",
    "eslint": "6.8.0",
    "eslint-plugin-import-helpers": "1.1.0",
    "eslint-plugin-jest": "24.3.5",
    "eslint-plugin-react": "7.20.3",
    "git-last-commit": "1.0.1",
    "jest": "26.6.3",
    "prensa-docs": "0.0.6",
    "prop-types": "^15.8.1",
    "rollup": "2.77.0",
    "rollup-plugin-esbuild": "4.9.1",
    "semantic-release": "^19.0.3",
    "semantic-release-slack-bot": "3.5.3",
    "slackify-markdown": "4.3.1",
    "typescript": "4.7.4"
  }
}
