{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationDir": "dist",
    "esModuleInterop": true,
    "emitDeclarationOnly": true,
    "extendedDiagnostics": true,
    "jsx": "react",
    "listEmittedFiles": true,
    "listFiles": true,
    "moduleResolution": "node",
    "noImplicitAny": false,
    "preserveSymlinks": true,
    "resolveJsonModule": true,
    "strict": true
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "include": [
    "index.ts",
    "types.ts"
  ]
}