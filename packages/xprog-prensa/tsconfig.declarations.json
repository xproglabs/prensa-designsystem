{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "extendedDiagnostics": true,
    "jsx": "react",
    "lib": [
      "dom",
      "ES2017"
    ],
    "moduleResolution": "node",
    "noImplicitAny": false,
    "outDir": "dist",
    "resolveJsonModule": true,
    "strict": true,
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "include": [
    "hooks/index.ts",
    "primitives/index.ts",
    "news/index.ts",
    "react-responsive-carousel/lib/ts/components/Carousel/types"
  ]
}