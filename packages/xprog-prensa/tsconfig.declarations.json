{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "declaration": true,
    "declarationDir": "dist",
    "esModuleInterop": true,
    "emitDeclarationOnly": true,
    "extendedDiagnostics": true,
    "jsx": "react",
    "listEmittedFiles": true,
    "listFiles": true,
    "paths": {
      "@prensa-config": [
        "prensa.config.d.ts"
      ]
    },
    "resolveJsonModule": true,
    "strict": true
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "include": [
    "index.ts",
    "types.ts"
  ]
}