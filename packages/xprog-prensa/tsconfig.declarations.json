{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationDir": "dist",
    "esModuleInterop": true,
    "emitDeclarationOnly": true,
    "extendedDiagnostics": true,
    "jsx": "react",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "preserveSymlinks": true,
    "resolveJsonModule": true,
    "strict": true
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "include": [
    "news/types.ts",
    "primitives/types.ts",
    "react-responsive-carousel/lib/ts/components/Carousel/types"
  ]
}