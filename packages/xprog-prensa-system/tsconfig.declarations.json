{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationDir": "dist",
    "esModuleInterop": true,
    "emitDeclarationOnly": true,
    "extendedDiagnostics": true,
    "moduleResolution": "node",
    "noImplicitAny": false,
    "outDir": "dist",
    "resolveJsonModule": true,
    "strict": true,
    "target": "ES6",
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "include": [
    "types.ts"
  ]
}