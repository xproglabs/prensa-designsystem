{
  "name": "@xprog/prensa-system",
  "version": "0.0.1",
  "description": "PDS Core System",
  "author": "XPROG",
  "license": "ISC",
  "repository": "https://github.com/xproglabs/prensa-designsystem.git",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "scripts": {
    "build": "npm run clear:dist && npm run build:js && npm run build:ts",
    "build:js": "tsc -p ./tsconfig.build.json",
    "build:ts": "tsc -p ./tsconfig.declarations.json",
    "build:tgz": "cd dist && npm pack",
    "clear:dist": "rimraf dist",
    "prerelease:tgz": "npm run prerelease:copyfiles && npm run build:tgz",
    "prerelease:copyfiles": "cpx package.json dist"
  },
  "dependencies": {
    "@stitches/react": "1.2.8",
    "@types/react": "^18.2.5",
    "@types/react-dom": "^18.2.4",
    "@xprog/prensa-design-tokens": "./xprog-prensa-design-tokens-1.7.0.tgz",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "cpx": "1.5.0",
    "rimraf": "3.0.2",
    "typescript": "4.7.4"
  },
  "types": "types.d.ts"
}
